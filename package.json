{
  "name": "unfurl.js",
  "version": "1.1.6",
  "description": "Scraper for oEmbed, Twitter Cards and Open Graph metadata - fast and Promise-based",
  "main": "index.js",
  "standard": {
    "ignore": [
      "/test/*.js",
      "/bench/*.js"
    ]
  },
  "dependencies": {
    "debug": "^2.6.7",
    "htmlparser2": "^3.9.2",
    "lodash": "^4.17.4",
    "pify": "^2.3.0",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "connect": "^3.6.1",
    "coveralls": "^2.11.9",
    "http-server": "^0.10.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.3.0",
    "mocha-lcov-reporter": "^1.2.0",
    "nyc": "^10.2.0",
    "open-graph-scraper": "^2.4.2",
    "serve-static": "^1.12.2",
    "standard": "^10.0.2"
  },
  "scripts": {
    "bench": "DEBUG=bench node --harmony ./bench/index.js",
    "test": "mocha ./test/**/*.js && nyc --reporter=html --reporter=text mocha && standard --fix",
    "coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "keywords": [
    "oembed",
    "twitter-cards",
    "open-graph-protocol",
    "open-graph",
    "ogp",
    "scraper",
    "scraping",
    "embedding",
    "embed",
    "iframe",
    "metadata",
    "nodejs",
    "fast"
  ],
  "files": [
    "README.md",
    "index.js",
    "lib/"
  ],
  "repository": "git://github.com/jacktuck/unfurl.git",
  "author": "Jack Tuck",
  "license": "ISC"
}
